<section class="event">
  <div class="image">
    <%= image_tag @event.image_file_name %>
  </div>
  <div class="summary">
    <h2><%= @event.name %></h2>
    <h2>
      <%= pluralize(@event.capacity, "spot") %> &bull; <%= price(@event) %>
    </h2>
    <h3>
      <%= day_and_time(@event) %> in <%= @event.location %>
    </h3>
    <p>
      <%= @event.description %>
    </p>
  </div>
</section>

  <section class="admin">
    <%= link_to "Edit", edit_event_path(@event), class: "button" %>
    <%= link_to "Delete", @event, class: "button",
         data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"} %>
  </section>