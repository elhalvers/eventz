<section class="event">
    <div class="summary">
      <h2><%= @event.name %></h2>
      <h2>
        <%= price(@event) %>
      </h2>
      <h3>
        <%= day_and_time(@event) %> in <%= @event.location %>
      </h3>
      <p>
        <%= @event.description %>
      </p>
    </div>
  </section>

  <section class="admin">
    <%= link_to "Edit", edit_event_path(@event), class: "button" %>
  </section>